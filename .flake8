[flake8]
ignore =
  E501  # line too long, defer to black
  W503  # allow line breaks before binary ops
  W504  # allow line breaks after binary ops
  E203  # allow whitespace before ':' (https://github.com/psf/black#slices) 
exclude =
  .bzr
  .git
  .hg
  .svn
  .tox
  CVS
  .venv*/
  venv*/
  target
  __pycache__
  */build/lib/*
